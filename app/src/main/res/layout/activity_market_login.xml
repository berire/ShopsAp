<?xml version="1.0" encoding="utf-8"?>
<!-- deneme -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <Button
        android:id="@+id/login_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@android:color/black"
        android:layout_marginBottom="228dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <!-- EditText ToType The Email-->
    <EditText
        android:id="@+id/shop_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Shop Mail"
        android:inputType="textEmailAddress"
        android:layout_above="@+id/shop_passwordM"
        android:layout_toRightOf="@+id/login_progressBar"
        android:layout_toEndOf="@+id/login_progressBar" />

    <!-- ProgressBar -->
    <EditText
        android:id="@+id/shop_passwordM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Shop Password"
        android:inputType="textPassword"
        android:layout_above="@+id/login_market"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/sign_upM"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Register via Mail"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:layout_below="@+id/shop_passwordM"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp" />

    <ProgressBar
        android:id="@+id/shop_progressBarM"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

    <!-- EditText To Type The Password-->


</RelativeLayout>

