<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/item_name"
        android:layout_width="372dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="text|textCapCharacters|textCapWords"
        android:hint="Ürün Adı"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_image"
        app:layout_constraintBottom_toTopOf="@+id/item_expln"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/item_expln"
        android:layout_width="372dp"
        android:layout_height="47dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Ürün Açıklaması"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/item_barcode"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.969"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/item_count"
        android:layout_width="372dp"
        android:layout_height="47dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Ürün Adedi"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/item_price"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_image"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_editor_absoluteY="319dp"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/item_price"
        android:layout_width="372dp"
        android:layout_height="47dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Ürün Fiyatı"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/add_approve"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_image"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/item_barcode"
        android:layout_width="372dp"
        android:layout_height="47dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Ürün Barkodu(13EAN)"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/item_count"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_image"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/add_approve"
        android:layout_width="90dp"
        android:layout_height="39dp"
        android:text="Onayla"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.982"
        tools:layout_editor_absoluteY="456dp"
        tools:layout_editor_absoluteX="146dp" />

    <ImageButton
        android:id="@+id/item_image"
        app:srcCompat="@drawable/paint"
        android:layout_width="152dp"
        android:layout_height="122dp"
        android:layout_marginBottom="8dp"
        android:paddingTop="22sp"
        android:text="Ürün Resmi"
        android:textAlignment="center"
        android:textColor="@color/cast_intro_overlay_background_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021"

        />

    <Spinner
        android:id="@+id/spinnerm"
        android:layout_width="118dp"
        android:layout_height="38dp"
        android:dropDownHorizontalOffset="120dp"
        android:gravity="left|fill_vertical"
        android:spinnerMode="dropdown"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/item_image"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/add_approve"
        app:layout_constraintVertical_bias="0.035" />

</android.support.constraint.ConstraintLayout>