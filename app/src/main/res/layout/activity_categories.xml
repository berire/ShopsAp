<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <include layout="@layout/toolbars"
        android:id="@+id/include" />
    <TableLayout
        android:layout_width="355dp"
        android:layout_height="473dp"
        android:baselineAligned="false"
        android:splitMotionEvents="false"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintVertical_bias="0.055">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button01"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:background="@drawable/groceries"
                android:text="Gıda"
                android:textAlignment="center"
                android:textColor="@color/btn_login_bg"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans"
                android:paddingTop="42sp" />
            <Button
                android:id="@+id/button02"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:background="@drawable/soap"
                android:text="Temizlik"
                android:textAlignment="center"
                android:textColor="@color/btn_login_bg"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans"
                android:paddingTop="42sp"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button03"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:background="@drawable/duckling"
                android:text="Bebek-Çocuk"
                android:textAlignment="center"
                android:textColor="@color/btn_login_bg"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans"
                android:paddingTop="42sp"/>

            <Button
                android:id="@+id/button04"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:background="@drawable/shirt"
                android:text="Kıyafet"
                android:textAlignment="center"
                android:textColor="@color/btn_login_bg"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans"
                android:paddingTop="42sp"
                />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button05"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:background="@drawable/mirror"
                android:text="Kişisel Bakım"
                android:textAlignment="center"
                android:textColor="@color/btn_login_bg"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans"
                android:paddingTop="42sp"/>

            <Button
                android:id="@+id/button06"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:background="@drawable/gun"
                android:text="Yapı Gereçleri"
                android:textAlignment="center"
                android:textColor="@color/btn_login_bg"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans"
                android:paddingTop="42sp"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button07"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:background="@drawable/bulb"
                android:paddingTop="42sp"
                android:text="Elektronik"
                android:textAlignment="center"
                android:textColor="@color/btn_login_bg"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <Button
                android:id="@+id/button08"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:background="@drawable/diamond"
                android:text="Diğer"
                android:textAlignment="center"
                android:textColor="@color/btn_login_bg"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="sans"
                android:paddingTop="42sp"
                />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>