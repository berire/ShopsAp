<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/shop_add"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/shop_add"
        android:text="Ekle"
        android:paddingRight="30dp"
        android:paddingTop="22sp"
        android:textAlignment="center"
        android:textColor="@color/cast_intro_overlay_background_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"

        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.216" />

    <Button
        android:id="@+id/shop_org"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/shop_arr"
        android:text="Ayarlar"
        android:paddingRight="30dp"
        android:paddingTop="22sp"
        android:textAlignment="center"
        android:textColor="@color/cast_intro_overlay_background_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/shop_items"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="119dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/shop_orders"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/shop_items"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/shop_list"
        android:text="Ürünler"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingRight="30dp"
        android:paddingTop="22sp"
        android:textAlignment="center"
        android:textColor="@color/cast_intro_overlay_background_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="119dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/shop_add"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/shop_orders"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/shop_order"
        android:paddingRight="20dp"
        android:paddingTop="22sp"
        android:text="Siparişler"
        android:textAlignment="center"
        android:textColor="@color/cast_intro_overlay_background_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.216"
        app:layout_constraintLeft_toRightOf="@+id/shop_add"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0" />
</android.support.constraint.ConstraintLayout>